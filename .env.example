# ============================================
# CONFIGURAÇÃO DO BACKEND - AMBIENTE
# ============================================

# === Banco de Dados PostgreSQL ===
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME=sistema_electrosal_dev
DATABASE_URL="postgresql://seu_usuario:sua_senha@localhost:5435/sistema_electrosal_dev?schema=public"

# === JWT ===
JWT_SECRET="sua_chave_secreta_aqui"

# === API Keys ===
AUTOMATIONS_API_KEY=sua_api_key
DEFAULT_ORGANIZATION_ID=uuid-aqui

# === Evolution API ===
EVOLUTION_API_KEY=sua_evolution_key
EVOLUTION_INSTANCE_TOKEN=seu_evolution_token

# === Banco Evolution ===
POSTGRES_USER=evolution_user
POSTGRES_PASSWORD=evolution_pass
POSTGRES_DB=evolution_db
DATABASE_PROVIDER=postgresql

# ============================================
# NOTAS IMPORTANTES:
# ============================================
